<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="col s12 m6 offset-m3 center">
    <div class="input-field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="input-field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="input-field">
      <%= f.label :cpf %><br>
      <%= f.text_field :cpf %>
    </div>
    <div class="input-field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="input-field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="input-field">
      <%= f.label :idfacebook %><br>
      <%= f.text_field :idfacebook %>
    </div>
    <div>
      <%= recaptcha_tags %>
    </div>
    <div class="actions">
      <%= f.submit(class: "btn waves-effect waves-light" ) %>
      <%= link_to "Cancelar", :back, :class => "btn waves-effect waves-light" %>
    </div>
  </div>
  </div>
<% end %>
