 <div class="container">
     <div class="col s12">
    	<table class="highlight responsive-table">
    	    <thead>
    		    <tr>
    			    <th class="center">Usuário</th>
    				<th class="center">Operações</th>
    			</tr>
            </thead>
    		<tbody>
        		<% (::Admin::CreatorPermissionList.all).each do |req| %>
            		<tr>
            			<td width="75%"><%= User.find(req.user_id).name %></td>
            			<td width="25%">
            			    <!-- Approve user request -->
            			    <%= button_to 'Aprovar',
                                admin_creator_permission_list_approve_request_path(
                                    :user_req_id => req.user_id),
                                method: :post,
                                :class => 'btn green' %>
                            
                            <!-- deny user request -->    
            				<%= button_to 'Negar',
                                admin_creator_permission_list_deny_request_path(
                                    :user_req_id => req.user_id),
                                method: :post ,
                                :class => 'btn red' %>
            			</td>
            		</tr>
        		<% end %>
    	    </tbody>
        </table>
    </div>
</div>